{
  "/users": {
    "get": {
      "tags": ["Users"],
      "summary": "Get all users with pagination",
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "in": "query",
          "name": "page",
          "schema": { "type": "integer", "default": 1 }
        },
        {
          "in": "query",
          "name": "limit",
          "schema": { "type": "integer", "default": 10 }
        },
        { "in": "query", "name": "search", "schema": { "type": "string" } },
        {
          "in": "query",
          "name": "status",
          "schema": {
            "type": "string",
            "enum": ["ACTIVE", "INACTIVE", "PENDING"]
          }
        },
        {
          "in": "query",
          "name": "sort",
          "schema": { "type": "string", "default": "createdAt" }
        },
        {
          "in": "query",
          "name": "order",
          "schema": {
            "type": "string",
            "enum": ["ASC", "DESC"],
            "default": "DESC"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResponsePagination"
              }
            }
          }
        }
      }
    }
  },
  "/users/{id}": {
    "get": {
      "tags": ["Users"],
      "summary": "Get user by id",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResponseDefault"
              }
            }
          }
        }
      }
    }
  }
}

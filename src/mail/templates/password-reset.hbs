<!-- ===== ICON BADGE ===== -->
<div
  class='icon-badge-wrap'
  style='text-align:center; margin-top:-36px; position:relative; z-index:1;'
>
  <div
    class='icon-badge'
    style='display:inline-flex; align-items:center; justify-content:center; width:72px; height:72px; border-radius:50%; background:#fff; box-shadow:0 4px 16px rgba(99,102,241,0.25); border:4px solid #eef2ff;'
  >
    <svg
      width='32'
      height='32'
      viewBox='0 0 24 24'
      fill='none'
      stroke='#6366f1'
      stroke-width='2'
      stroke-linecap='round'
      stroke-linejoin='round'
    >
      <rect x='3' y='11' width='18' height='11' rx='2' ry='2' />
      <path d='M7 11V7a5 5 0 0 1 10 0v4' />
    </svg>
  </div>
</div>

<!-- ===== TITLE & SUBTITLE ===== -->
<h1
  style='font-size:22px; font-weight:700; color:#1e293b; margin-bottom:10px; letter-spacing:-0.3px; margin-top:20px;'
>Reset Your Password</h1>
<p
  class='subtitle'
  style='font-size:14px; color:#64748b; max-width:440px; margin:0 auto 28px; line-height:1.7;'
>
  Hi
  <strong style='color:#1e293b;'>{{userName}}</strong>, we received a request to
  reset the password for your account. Click the button below to create a new
  password.
</p>

<!-- ===== CTA BUTTON ===== -->
<a
  href='{{resetUrl}}'
  class='btn-cta'
  style='display:inline-block; background:linear-gradient(135deg,#6366f1 0%,#8b5cf6 100%); color:#fff !important; font-size:15px; font-weight:600; padding:14px 36px; border-radius:10px; text-decoration:none !important; letter-spacing:0.2px; box-shadow:0 4px 14px rgba(99,102,241,0.4);'
>
  Reset Password
</a>

<!-- ===== DIVIDER ===== -->
<div
  class='divider'
  style='width:48px; height:3px; background:linear-gradient(90deg,#6366f1,#8b5cf6); border-radius:2px; margin:28px auto;'
></div>

<!-- ===== INFO CARD ===== -->
<div
  class='info-card'
  style='background:#f8fafc; border:1px solid #e2e8f0; border-radius:12px; padding:20px 24px; margin:0 auto 24px; max-width:420px; text-align:left;'
>

  <!-- Row: Account -->
  <div
    class='info-row'
    style='display:flex; align-items:flex-start; gap:12px; padding:10px 0;'
  >
    <div
      class='info-icon'
      style='flex-shrink:0; width:36px; height:36px; border-radius:8px; background:#eef2ff; display:flex; align-items:center; justify-content:center;'
    >
      <svg
        width='18'
        height='18'
        viewBox='0 0 24 24'
        fill='none'
        stroke='#6366f1'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <path d='M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2' />
        <circle cx='12' cy='7' r='4' />
      </svg>
    </div>
    <div>
      <div
        class='info-label'
        style='font-size:11px; font-weight:600; color:#94a3b8; text-transform:uppercase; letter-spacing:0.8px; margin-bottom:2px;'
      >Account Name</div>
      <div
        class='info-value'
        style='font-size:13px; color:#334155; font-weight:500;'
      >{{userName}}</div>
    </div>
  </div>

  <!-- Row: Email -->
  <div
    class='info-row'
    style='display:flex; align-items:flex-start; gap:12px; padding:10px 0; border-top:1px solid #e2e8f0;'
  >
    <div
      class='info-icon'
      style='flex-shrink:0; width:36px; height:36px; border-radius:8px; background:#eef2ff; display:flex; align-items:center; justify-content:center;'
    >
      <svg
        width='18'
        height='18'
        viewBox='0 0 24 24'
        fill='none'
        stroke='#6366f1'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <path
          d='M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z'
        />
        <polyline points='22,6 12,13 2,6' />
      </svg>
    </div>
    <div>
      <div
        class='info-label'
        style='font-size:11px; font-weight:600; color:#94a3b8; text-transform:uppercase; letter-spacing:0.8px; margin-bottom:2px;'
      >Email Address</div>
      <div
        class='info-value'
        style='font-size:13px; color:#334155; font-weight:500;'
      >{{recipientEmail}}</div>
    </div>
  </div>

  <!-- Row: Expiration -->
  <div
    class='info-row'
    style='display:flex; align-items:flex-start; gap:12px; padding:10px 0; border-top:1px solid #e2e8f0;'
  >
    <div
      class='info-icon'
      style='flex-shrink:0; width:36px; height:36px; border-radius:8px; background:#eef2ff; display:flex; align-items:center; justify-content:center;'
    >
      <svg
        width='18'
        height='18'
        viewBox='0 0 24 24'
        fill='none'
        stroke='#6366f1'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <circle cx='12' cy='12' r='10' />
        <polyline points='12 6 12 12 16 14' />
      </svg>
    </div>
    <div>
      <div
        class='info-label'
        style='font-size:11px; font-weight:600; color:#94a3b8; text-transform:uppercase; letter-spacing:0.8px; margin-bottom:2px;'
      >Link Expires At</div>
      <div
        class='info-value'
        style='font-size:13px; color:#334155; font-weight:500;'
      >{{formatDate expiresAt 'long'}}</div>
    </div>
  </div>

  <!-- Row: Requested -->
  <div
    class='info-row'
    style='display:flex; align-items:flex-start; gap:12px; padding:10px 0; border-top:1px solid #e2e8f0;'
  >
    <div
      class='info-icon'
      style='flex-shrink:0; width:36px; height:36px; border-radius:8px; background:#eef2ff; display:flex; align-items:center; justify-content:center;'
    >
      <svg
        width='18'
        height='18'
        viewBox='0 0 24 24'
        fill='none'
        stroke='#6366f1'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <circle cx='12' cy='12' r='10' />
        <polyline points='12 6 12 12 16 14' />
      </svg>
    </div>
    <div>
      <div
        class='info-label'
        style='font-size:11px; font-weight:600; color:#94a3b8; text-transform:uppercase; letter-spacing:0.8px; margin-bottom:2px;'
      >Requested At</div>
      <div
        class='info-value'
        style='font-size:13px; color:#334155; font-weight:500;'
      >{{formatDate requestedAt 'long'}}</div>
    </div>
  </div>

</div>

<!-- ===== LINK FALLBACK ===== -->
<div
  class='link-fallback'
  style='margin:24px auto 0; max-width:440px; text-align:center;'
>
  <p style='font-size:12px; color:#94a3b8; margin-bottom:8px;'>If the button
    doesn't work, copy and paste the link below:</p>
  <div
    class='link-box'
    style="background:#f1f5f9; border:1px solid #e2e8f0; border-radius:8px; padding:10px 14px; font-size:11.5px; color:#6366f1; word-break:break-all; text-align:left; font-family:'SF Mono','Fira Code','Consolas',monospace;"
  >
    {{resetUrl}}
  </div>
</div>

<!-- ===== SECURITY NOTE ===== -->
<div
  class='security-note'
  style='background:#fefce8; border:1px solid #fde047; border-radius:10px; padding:14px 18px; margin:24px auto 0; max-width:440px; display:flex; align-items:flex-start; gap:10px; text-align:left;'
>
  <div class='sec-icon' style='flex-shrink:0;'>
    <svg
      width='20'
      height='20'
      viewBox='0 0 24 24'
      fill='none'
      stroke='#ca8a04'
      stroke-width='2'
      stroke-linecap='round'
      stroke-linejoin='round'
    >
      <path d='M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z' />
    </svg>
  </div>
  <p style='font-size:12px; color:#713f12; line-height:1.6;'>
    <strong>Security Notice:</strong>
    This link is valid for
    <strong>1 hour</strong>
    and can only be used once. If you did not request a password reset, please
    ignore this email. If you believe your account has been compromised,
    <a href='{{appUrl}}/support' style='color:#92400e; font-weight:600;'>contact
      our support team</a>
    immediately.
  </p>
</div>

<!-- ===== SUCCESS CIRCLE ===== -->
<div
  class='success-section'
  style='text-align:center; padding:8px 0 4px; margin-top:12px;'
>
  <div
    class='success-circle'
    style='display:inline-flex; align-items:center; justify-content:center; width:80px; height:80px; border-radius:50%; background:linear-gradient(135deg,#10b981,#34d399); box-shadow:0 4px 16px rgba(16,185,129,0.35); margin-bottom:20px;'
  >
    <svg
      width='40'
      height='40'
      viewBox='0 0 24 24'
      fill='none'
      stroke='#fff'
      stroke-width='2.5'
      stroke-linecap='round'
      stroke-linejoin='round'
    >
      <polyline points='20 6 9 17 4 12' />
    </svg>
  </div>
</div>

<!-- ===== TITLE & SUBTITLE ===== -->
<h1
  style='font-size:22px; font-weight:700; color:#1e293b; margin-bottom:10px; letter-spacing:-0.3px;'
>Password Changed Successfully</h1>
<p
  class='subtitle'
  style='font-size:14px; color:#64748b; max-width:440px; margin:0 auto 28px; line-height:1.7;'
>
  Hi
  <strong style='color:#1e293b;'>{{userName}}</strong>, your password has been
  updated successfully. Your account is now secured with the new password.
</p>

<!-- ===== DIVIDER ===== -->
<div
  class='divider'
  style='width:48px; height:3px; background:linear-gradient(90deg,#6366f1,#8b5cf6); border-radius:2px; margin:28px auto;'
></div>

<!-- ===== INFO CARD ===== -->
<div
  class='info-card'
  style='background:#f8fafc; border:1px solid #e2e8f0; border-radius:12px; padding:20px 24px; margin:0 auto 24px; max-width:420px; text-align:left;'
>

  <!-- Row: Account -->
  <div
    class='info-row'
    style='display:flex; align-items:flex-start; gap:12px; padding:10px 0;'
  >
    <div
      class='info-icon'
      style='flex-shrink:0; width:36px; height:36px; border-radius:8px; background:#eef2ff; display:flex; align-items:center; justify-content:center;'
    >
      <svg
        width='18'
        height='18'
        viewBox='0 0 24 24'
        fill='none'
        stroke='#6366f1'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <path d='M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2' />
        <circle cx='12' cy='7' r='4' />
      </svg>
    </div>
    <div>
      <div
        class='info-label'
        style='font-size:11px; font-weight:600; color:#94a3b8; text-transform:uppercase; letter-spacing:0.8px; margin-bottom:2px;'
      >Account Name</div>
      <div
        class='info-value'
        style='font-size:13px; color:#334155; font-weight:500;'
      >{{userName}}</div>
    </div>
  </div>

  <!-- Row: Email -->
  <div
    class='info-row'
    style='display:flex; align-items:flex-start; gap:12px; padding:10px 0; border-top:1px solid #e2e8f0;'
  >
    <div
      class='info-icon'
      style='flex-shrink:0; width:36px; height:36px; border-radius:8px; background:#eef2ff; display:flex; align-items:center; justify-content:center;'
    >
      <svg
        width='18'
        height='18'
        viewBox='0 0 24 24'
        fill='none'
        stroke='#6366f1'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <path
          d='M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z'
        />
        <polyline points='22,6 12,13 2,6' />
      </svg>
    </div>
    <div>
      <div
        class='info-label'
        style='font-size:11px; font-weight:600; color:#94a3b8; text-transform:uppercase; letter-spacing:0.8px; margin-bottom:2px;'
      >Email Address</div>
      <div
        class='info-value'
        style='font-size:13px; color:#334155; font-weight:500;'
      >{{recipientEmail}}</div>
    </div>
  </div>

  <!-- Row: Changed At -->
  <div
    class='info-row'
    style='display:flex; align-items:flex-start; gap:12px; padding:10px 0; border-top:1px solid #e2e8f0;'
  >
    <div
      class='info-icon'
      style='flex-shrink:0; width:36px; height:36px; border-radius:8px; background:#eef2ff; display:flex; align-items:center; justify-content:center;'
    >
      <svg
        width='18'
        height='18'
        viewBox='0 0 24 24'
        fill='none'
        stroke='#6366f1'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <circle cx='12' cy='12' r='10' />
        <polyline points='12 6 12 12 16 14' />
      </svg>
    </div>
    <div>
      <div
        class='info-label'
        style='font-size:11px; font-weight:600; color:#94a3b8; text-transform:uppercase; letter-spacing:0.8px; margin-bottom:2px;'
      >Changed At</div>
      <div
        class='info-value'
        style='font-size:13px; color:#334155; font-weight:500;'
      >{{formatDate changedAt 'long'}}</div>
    </div>
  </div>

</div>

